                <% } else { %>
                    <button onclick="prueba(infoPeliculasAventuraInfantilesJSON, '2')" class="load-more"
                        id="load-more2"> Ver más</button>
                    <% } %>
    </section>

    <section class="movies container">
        <%- html2 %>
            <% if (perfil =='Kids' ) { %>
                <% } else { %>
                    <% } %>
                        <button onclick="prueba(infoPeliculasComediaJSON, '3')" class="load-more" id="load-more3">
                            Ver más</button>
    </section>

    <%- include('footer') %>

        <script src="/javascripts/catalogo.js"></script>
        <script src="/javascripts/nav.js"></script>
        <script src="/javascripts/cargarPeliculas.js"></script>
        <script src="/javascripts/buscador.js"></script>
        <script src="/javascripts/carruselPrincipal.js"></script>

</body>

</html>