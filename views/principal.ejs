</head>

<body>
    <header class="header">
        <div class="contenedor-botonVerPelicula">
            <button class="boton-VerPelicula" onclick="verDetalle()"><i class="fas fa-info-circle" id="infoPeli"></i> Ver Detalles</button>
        </div>

        <div class="contenedor-botones">
            <script>
                // Convertir listaCarrusel1 a una lista de JavaScript
                var listaCarruselJS = <%- JSON.stringify(listaCarrusel1) %>;
            </script>   
            <button class="boton-izq" onclick="carrusel(listaCarruselJS, 'izq')"> <i class="fas fa-chevron-left"></i></button>            
            <button class="boton-drch" onclick="carrusel(listaCarruselJS, 'drch')"> <i class="fas fa-chevron-right"></i></button>
        </div>
        <div id="divTituloPeliculaCarrusel">
            <h1 id="tituloPeliculaCarrusel"><%-  titulo %></h1>
        </div>
        <div class="div-img">
            <img id="imagenCarrusel" class="img-header" src= <%-  img %>>
        </div>
        <div id="contenedorFondoNegro" class="contenedorFondoNegro"> </div>
        <div class="menu container">
            <a href="#" class="logo"> Cinepolis</a>
            <input type="checkbox" id="menu" />
        <!--    <label class="label" for="menu">
                <img src="/images/menu.png" class="menu-icono" alt="menu">
            </label>
            -->
            <nav class="navbar">
                <ul>
                    <li><a href="/principal?perfil=<%- perfil %>&usuario=<%- usuarioCuenta %>"> Inicio</a></li>
                    <li><a href="/catalogo"> Peliculas</a></li>
                    <li><a href="/lista"> Lista</a></li>
                </ul>
            </nav>
            <div class="buscador">
                <div class="search-input-box">
                    <input type="text" placeholder="¿Qué quieres buscar?" />
                    <a href="#" target="_blank">
                        <i class="fa-solid fa-magnifying-glass icon"> </i>
                    </a>
                    <ul class="container-suggestions active">
                        <li>sugerencia 1</li>
                        <li>sugerencia 2</li>
                        <li>sugerencia 3</li>
                    </ul>
                </div>
            </div>

           <i id="icono-ventana-pequena" class="icono-ventana-pequena">
           <img class="img-menu-ventana" src="\images\menu.png">
           </i> 
            <div  class="ventana-pequena">
                    <ul class="menu-ventana-pequena">
                        <li>
                            <i class="fas fa-home" aria-hidden="true"></i>
                            <a href="/principal?perfil=<%- perfil %>&usuario=<%- usuarioCuenta %>"> Inicio</a>
                        </li>
                        <li>
                            <i class="fas fa-film" aria-hidden="true"></i>
                            <a href="/catalogo"> Catalogo</a>
                        </li>
                        <li>
                            <i class="fas fa-list" aria-hidden="true"></i>
                            <a href="/lista"> Lista</a>
                        </li>
                    </ul>
            </div>
            <%- include('botonUsuario') %>
                <div class="header-content container">
                    <div class="header-1">
                        <img src="" alt="">
                        <a href="#" class="btn-2">Ver ahora</a>
                    </div>
                    <div class="header-2">
                        <h1>Las mejores <br> peliculas</h1>
                        <img src="" alt="">
                    </div>
                </div>
    </header>
    <script>
        var infoPeliculasMasVistasJSON = <%- JSON.stringify(infoPeliculasMasVistas) %>;
