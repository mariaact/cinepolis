            <% } %>
    </section>
    <section class="movies container">
        <%- html %>
            <% if (perfil =='Kids' ) { %>
                <button onclick="prueba(infoPeliculasMasVistasInfantilesJSON, '1')" class="load-more" id="load-more1">
                    Ver más</button>
                <% } else { %>
                    <button onclick="prueba(infoPeliculasMasVistasJSON, '1')" class="load-more" id="load-more1"> Ver más</button>
                    <% } %>
    </section>
    <section class="movies container">
        <%- html1 %>
            <% if (perfil =='Kids' ) { %>
                <button onclick="prueba(infoPeliculasAventuraInfantilesJSON, '2')" class="load-more" id="load-more2">
